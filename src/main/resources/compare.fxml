<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<VBox
    maxHeight="-Infinity"
    maxWidth="-Infinity"
    minHeight="-Infinity"
    minWidth="-Infinity"
    prefHeight="800.0"
    spacing="10.0"
    xmlns="http://javafx.com/javafx/8.0.281"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ru.fusionsoft.database.application.gui.CompareControls"
>
    <children>
        <HBox fx:id="hroot" prefWidth="1280.0">
            <children>
                <TextField fx:id="right" prefWidth="${hroot.width * 0.5}"/>
                <TextField fx:id="left" prefWidth="${hroot.width * 0.5}" alignment="CENTER_RIGHT"/>
            </children>
        </HBox>
        <ScrollPane fx:id="scroll">
            <content>
                <TextFlow fx:id="flow" snapToPixel="false"/>
            </content>
        </ScrollPane>

    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
